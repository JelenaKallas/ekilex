{
  "name": "ekilex-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean-and-copy-html": "npm-run-all clean-html  copy-html",
    "clean-fonts": "cleandir target/classes/view/fonts",
    "clean-html": "cleandir target/classes/view/html",
    "clean-img": "cleandir target/classes/view/img",
    "copy-html": "ncp src/main/resources/view/html target/classes/view/html ",
    "copy-img": "ncp src/main/resources/view/img target/classes/view/img ",
    "copy-fonts": "ncp src/main/resources/view/fonts target/classes/view/fonts ",
    "css": "npm-run-all --continue-on-error css-lint-stylelint css-compile css-prefix",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/main/resources/view/scss/styles.scss target/classes/view/css/styles.css",
    "css-lint-stylelint": "stylelint \"src/main/resources/view/scss/*.scss\" --cache --cache-location .cache/.stylelintcache",
    "css-prefix": "postcss --config build/postcss.config.js --replace \"target/classes/view/css/*.css\"",
    "watch": "npm-run-all --parallel watch-css watch-html",
    "watch-css": "nodemon --watch src/main/resources/view/scss/ --ext scss --exec \"npm run css\"",
    "watch-html": "nodemon --watch src/main/resources/view/html/ --ext html --exec \"npm run clean-and-copy-html\""
  },
  "author": "TripleDev OÃœ",
  "license": "",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "bootstrap": "^4.3.1",
    "clean-dir": "^1.0.3",
    "ncp": "^2.0.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "stylelint": "^10.1.0",
    "stylelint-config-twbs-bootstrap": "^0.4.0"
  }
}
